                    <xs:documentation>Flagg som indikerer om eps er p책 institusjon</xs:documentation>
                </xs:annotation>
            </xs:element>
        </xs:all>
    </xs:complexType>

    <xs:simpleType name="brukerTypeOpphold">
        <xs:restriction base="xs:token">
            <xs:enumeration value="FENGSEL"/>
            <xs:enumeration value="HELSE"/>
            <xs:enumeration value="SYKEHJEM"/>
            <xs:enumeration value="INGEN"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="epsTypeOpphold">
        <xs:restriction base="xs:token">
            <xs:enumeration value="FENGSEL"/>
            <xs:enumeration value="HELSE"/>
            <xs:enumeration value="SYKEHJEM"/>
            <xs:enumeration value="INGEN"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>